<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :name, required: true, label: false, autofocus: true, placeholder: "Ime i Prezime"  %>
    <%= f.input :email, label: false, placeholder: "Tvoj Email" %>
    <%= f.input :password, required: true, label: false, placeholder: "Tvoja Sifra" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Kreiraj Nalog" %>
  </div>
<% end %>
